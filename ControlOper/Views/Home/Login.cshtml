
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
    <link rel="stylesheet" href="~/content/Site.css" media="all">
</head>
<body>
    @Html.Partial("~/Views/Shared/header.cshtml", "")
    <h2 style="text-align: center;">Авторизация</h2>
    <div class="mainblock">
        <div class="form-aut">

            <form action="/login" method="post" enctype="multipart/form-data">
                <div>Логин:</div>
                <div><input type="text" name="login" value=""></div>
                <div>Пароль:</div>
                <div><input type="password" name="pass" value=""></div>
                <p style="color:red">@ViewBag.otvet</p>
                <div><input type="submit" value="Войти"  class="botton"></div>
            </form>

        </div>

    </div>
    @Html.Partial("~/Views/Shared/footer.cshtml", "")
</body>
</html>

<style>
    .mainblock {
        text-align: center;
        width: 100%;
    }

    .form-aut {
        width: 400px;
        margin: 0px auto;
    }
</style>
